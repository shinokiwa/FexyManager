border-radius()
 -webkit-border-radius arguments
 -moz-border-radius arguments
 border-radius arguments

box-shadow()
 -webkit-box-shadow arguments
 -moz-box-shadow arguments
 box-shadow arguments

border(args)
 border-style solid
 border-color #e5e5e5
 border-width args 
 box-shadow(0 1px 2px rgba(0,0,0,.05) )

@charset "utf-8";

/** Generals **/
body
 padding-top: 40px;
 padding-bottom: 40px;
 background-color: #f5f5f5;

body.navi-off
 padding-top: 40px;

body.navi-on
 padding-top: 60px;

.box
 padding 19px 29px 29px
 margin: 0 auto 20px
 background-color: #fff
 border: 1px solid #e5e5e5
 border-radius(5px)
 box-shadow(0 1px 2px rgba(0,0,0,.05) )

section#Navigations
 min-width 360px

.view, .template
 display: none;

/** Navigations **/
#Information
 background-color #000
 height 20px
 color #ccc
 overflow hidden

/** Login **/
#Login > form
 max-width 300px

/** List **/
#List .media-list .media
 margin: 0
 padding 19px
 border(0 0 1px 0)
 cursor pointer
 background-color: #fff

#List .media-list .media:hover
 background-color: #e5e5f5

#List .media-list .media-object
 max-width 64px
 max-height 64px

/** Detail **/
#Detail .media
 border(1px 0 1px 0)
 padding-top 20px
 padding-bottom 20px
 background-color #fff


/** Full **/
#Full .contents
 text-align center

#Full .controlls
 position fixed
 bottom 30px
 width 100%
 text-align center

/** Tags **/
.tag
 margin-right 1em
.tag-new, .tag-empty
 background-color #953b39
.tag:hover
 background-color #3a87ad 