header-height = 70px
footer-height = 60px

border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments

background-image-gradient()
 background-color: #f5f5f5;
 *background-color: #e6e6e6;
 background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#ffffff),to(#e6e6e6) );
 background-image: -webkit-linear-gradient(top, #ffffff, #e6e6e6);
 background-image: -o-linear-gradient(top, #ffffff, #e6e6e6);
 background-image: linear-gradient(to bottom, #ffffff, #e6e6e6);
 background-image: -moz-linear-gradient(top, #ffffff, #e6e6e6);

@charset "utf-8";

/** Generals **/
html
 height: 100%

*
 margin: 0
 padding: 0

body
 overflow-y:scroll;
 margin: 0 !important
 padding: 0 !important
 height: 100%

/** Headers **/

header
 position: fixed;
 width: 100%;
 height: header-height
 padding: 0;
 background-repeat: repeat-x;
 border: 0 0 1px 0 solid #bbbbbb;
 *border: 0;
 border-color: rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.25);
 border-color: #e6e6e6 #e6e6e6 #bfbfbf;
 border-bottom-color: #a2a2a2;
 background-image-gradient()
 *zoom: 1;
 -webkit-box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.2), 0 1px 2px rgba(0, 0, 0, 0.05);
 -moz-box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.2), 0 1px 2px rgba(0, 0, 0, 0.05);
 box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.2), 0 1px 2px rgba(0, 0, 0, 0.05);
 z-index: 100

@css {
header {
 filter: progid:dximagetransform.microsoft.gradient(startColorstr='#ffffffff',endColorstr='#ffe6e6e6', GradientType=0 );
 filter: progid:dximagetransform.microsoft.gradient(enabled=false );
}
}

header div

header h1
 padding: 10px 0
 margin: 0
 display: inline

header h1 a#header-logo,header h1 a#header-logo:hover, header h1 a#header-logo:active
 color: #abc;
 font-weight: normal;
 text-shadow: 3px 3px 8px #aaa;
 text-decoration: none;

/** contents **/

/** Footers **/
footer
 height: footer-height
 position: fixed;
 bottom: 0;
 width: 100%;
 background-color: #ccc;
 box-shadow: inset 0 -1px 0 rgba(255, 255, 255, 0.2), 0 1px 2px rgba(0, 0, 0, 0.05);
 z-index: 100

/** Navigations **/
nav {
	padding: 10px;
}

nav.header-left, nav.footer-left {
	float: left;
}

nav.header-right, nav.footer-right {
	float: right;
}

/** Wrapper **/
#wrapper
 padding: 0
 padding-bottom: footer-height
 position: relative
 top: header-height

#wrapper > div
 display: none
 z-index: 10

/** Index **/
#Index > section
 display: none
 width: auto
 padding: 5px
 height: 80px
 clear: both
 
#Index > section > div.thumbnail
 float: left
 width: 64px
 height: 64px
 background-repeat: no-repeat
 background-position: 50%

#Index > section > h4
 display: inline
 height: 100%
 line-height: 80px

/** Detail **/
@css {
#Detail .image {
 width: auto;
 height: auto;
 max-height: 95%;
 max-height: -webkit-calc(100% - 130px);
 max-height: -moz-calc(100% - 130px);
 max-height: calc(100% - 130px);
 max-width: 100%;
}
}

/** Contents **/
#username,#password
	width: 95%;

